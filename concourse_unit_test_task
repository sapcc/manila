export DEBIAN_FRONTEND=noninteractive && \
export UPPER_CONSTRAINTS_FILE=https://raw.githubusercontent.com/sapcc/requirements/stable/train-m3/upper-constraints.txt && \
apt-get update && \
apt-get install -y build-essential python-pip python3-dev git libpcre++-dev gettext && \
pip install tox "six>=1.14.0" && \
git clone -b stable/train-m3 --single-branch https://github.com/sapcc/manila.git --depth=1 && \
cd manila && \
tox -e py3
